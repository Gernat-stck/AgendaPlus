---
import { Image } from "astro:assets";
const { title, subtitle, userName, userRole } = Astro.props;
---

<header class="flex justify-between items-center mb-8">
  <div class="flex items-center gap-2">
    <h1 class="text-2xl font-semibold text-gray-800">{title}</h1>
    <span class="text-2xl text-purple-600">- {subtitle}</span>
  </div>
  <div class="flex items-center gap-3">
    <div class="text-right">
      <p class="font-medium text-gray-800">{userName}</p>
      <p class="text-sm text-gray-500">{userRole}</p>
    </div>
    <div class="w-12 h-12 bg-gray-200 rounded-full overflow-hidden">
      <Image
      src="/src/assets/usericon.svg"
      alt="Profile"
      width={48}
      height={48}
      class="w-full h-full object-cover"
    />
    </div>
  </div>
</header>
