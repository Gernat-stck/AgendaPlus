---
const navLinks = [
  { href: "/", icon: "ri-dashboard-line", label: "Dashboard" },
  { href: "/Citas", icon: "ri-calendar-line", label: "Citas" },
  { href: "/Clientes", icon: "ri-user-line", label: "Clientes" },
  { href: "/Servicios", icon: "ri-briefcase-line", label: "Servicios" },
  { href: "/Config", icon: "ri-settings-line", label: "Configuraci√≥n" },
];
---

<aside
  class="fixed left-0 top-0 h-screen w-20 hover:w-64 group transition-all duration-300 bg-white shadow-lg glow-effect"
>
  <nav class="h-full flex flex-col">
    <!-- Logo/Brand -->
    <div class="p-4 flex items-center">
      <div class="w-8 h-8 flex items-center justify-center text-gray-700">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-8 h-8"
          viewBox="0 0 20 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
      </div>
      <h1
        class="text-xl font-semibold text-gray-800 ml-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap"
      >
        Agenda+ <span class="text-sm text-gray-500">v1.0</span>
      </h1>
    </div>

    <!-- Navigation Links -->
    <div class="flex-1 px-3 py-6 space-y-4">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class="flex items-center gap-4 text-3xl px-3 py-3 text-gray-700 hover:bg-purple-300 rounded-lg transition-all duration-300 hover:shadow-md group"
          >
            <i class={`${link.icon} w-8 h-8 min-w-[2rem]`} />
            <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-lg whitespace-nowrap">
              {link.label}
            </span>
          </a>
        ))
      }
    </div>
  </nav>
</aside>

<style>
  .glow-effect {
    position: relative;
  }

  .glow-effect::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 60px;
    box-shadow: 7px 18px 20px rgba(135, 43, 247, 0.7);
    filter: blur(10px);
    opacity: 0.7;
    pointer-events: none;
  }

  .glow-effect::after {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 1px;
    background: rgba(168, 85, 247, 1);
  }

  a:hover {
    transform: translateX(2px);
  }
</style>
